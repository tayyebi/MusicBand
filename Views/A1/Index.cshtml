@model IEnumerable<Symphony.Models.A1>

@{
    ViewBag.Title = "نوازنده با ساز";
}
@Html.ActionLink("ایجاد", "Create")
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Instrument.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stringer.Fullname)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stringer.Fullname)
            </td>
            <td>
                @Ajax.ActionLink("حذف", "Delete", new { id = item.Id }, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Dynamic", OnComplete = "JsDynamic()" })
            </td>
        </tr>
    }
</table>
