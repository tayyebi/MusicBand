@model Symphony.Models.Adverties

@{
    ViewBag.Title = "ویرایش";
}
<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <h4>تبلیغات</h4>
    <br />
    @Html.ValidationSummary(true, "لطفا اطلاعات را دقیق وارد نمائید")
    @Html.HiddenFor(model => model.Id)

    <div>
        @Html.LabelFor(model => model.Title)
        <div>
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "*", new { @class = "Message" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.Url)
        <div>
            @Html.EditorFor(model => model.Url)
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.Image)
        <div>
            <input type="file" name="Image" />
            @Html.ValidationMessageFor(model => model.Image, "*")
        </div>
    </div>

    <input type="submit" value="ذخیره" />
</form>
@if (!Request.IsAjaxRequest())
{
@Html.ActionLink("بازگشت", "Index")
}
