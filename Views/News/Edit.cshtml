@model Symphony.Models.News

@{
    ViewBag.Title = "ویرایش";
}
<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <h4>اخبار</h4>
    <br />
    @Html.ValidationSummary(true, "لطفا اطلاعات را دقیق وارد نمائید")

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Date)
    <div>
        @Html.LabelFor(model => model.Title)
        <div>
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "*", new { @class = "Message" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.Abstract)
        <div>
            @Html.EditorFor(model => model.Abstract)
            @Html.ValidationMessageFor(model => model.Abstract, "*", new { @class = "Message" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.Text)
        <div>
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text, "*", new { @class = "Message" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.Thumbnail)
        <div>
            <input type="file" name="thumbnail" />
            @Html.ValidationMessageFor(model => model.Thumbnail, "*", new { @class = "Message" })
        </div>
    </div>

    <input type="submit" value="ذخیره" />
</form>
@if (!Request.IsAjaxRequest())
{
@Html.ActionLink("بازگشت", "Index")
}
